<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_movie"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="18dp"
                android:text="@string/tv_trending_text"
                android:textColor="@color/shimmer_color"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/tv_topreted_text"
                android:textColor="@color/shimmer_color"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/tv_on_the_air_text"
                android:textColor="@color/shimmer_color"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/now_playing_category"
                android:textColor="@color/shimmer_color"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

                <include layout="@layout/shimmer_item" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</com.facebook.shimmer.ShimmerFrameLayout>