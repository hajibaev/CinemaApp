<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_movie"
    app:layoutDescription="@xml/fragment_movie_details_scene"
    tools:context=".ui.movie.details_screen.MovieDetailsFragment">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/is_empty_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading"
        app:lottie_renderMode="automatic" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/toolBarGuidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/posterImageCard"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_240sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/top_main_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_main_image"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/poster_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_intro_two" />
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/top_main_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/kevin" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_title_constraint"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/top_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center_horizontal"
        android:text="Black Adam"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/posterImageCard"
        app:layout_constraintStart_toStartOf="@+id/posterImageCard"
        app:layout_constraintTop_toBottomOf="@+id/posterImageCard" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/bac_movie"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_name">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/genConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/viewConstraint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/rvs_constraint_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelinescrool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.2" />

                    <View
                        android:id="@+id/v"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/divider"
                        app:layout_constraintBottom_toBottomOf="@+id/movie_release_text_view"
                        app:layout_constraintEnd_toStartOf="@+id/guidelinescrool"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/movie_date" />

                    <View
                        android:id="@+id/v2"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/divider"
                        app:layout_constraintBottom_toBottomOf="@+id/textView10"
                        app:layout_constraintEnd_toStartOf="@+id/movie_time"
                        app:layout_constraintStart_toEndOf="@+id/movie_date"
                        app:layout_constraintTop_toTopOf="@+id/movie_time" />

                    <View
                        android:id="@+id/v3"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/divider"
                        app:layout_constraintBottom_toBottomOf="@+id/textView9"
                        app:layout_constraintEnd_toStartOf="@+id/movie_popularity"
                        app:layout_constraintStart_toEndOf="@+id/textView10"
                        app:layout_constraintTop_toTopOf="@+id/movie_popularity" />

                    <View
                        android:id="@+id/v4"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/divider"
                        app:layout_constraintBottom_toBottomOf="@+id/textView9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView9"
                        app:layout_constraintTop_toTopOf="@+id/movie_popularity" />

                    <TextView
                        android:id="@+id/movie_date"
                        style="@style/movie_details"
                        android:maxLength="4"
                        android:text="2023"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/movie_popularity"
                        style="@style/movie_details"
                        android:maxLength="3"
                        android:text="8.1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/movie_time"
                        style="@style/movie_details"
                        android:text="1 m"
                        app:layout_constraintEnd_toStartOf="@+id/movie_popularity"
                        app:layout_constraintStart_toEndOf="@+id/movie_date"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView9"
                        style="@style/movie_details_text"
                        android:text="Popularity"
                        app:layout_constraintEnd_toEndOf="@+id/movie_popularity"
                        app:layout_constraintStart_toStartOf="@+id/movie_popularity"
                        app:layout_constraintTop_toBottomOf="@+id/movie_popularity" />

                    <TextView
                        android:id="@+id/textView10"
                        style="@style/movie_details_text"
                        android:text="Time"
                        app:layout_constraintEnd_toEndOf="@+id/movie_time"
                        app:layout_constraintStart_toStartOf="@+id/movie_time"
                        app:layout_constraintTop_toBottomOf="@+id/movie_time" />

                    <TextView
                        android:id="@+id/movie_release_text_view"
                        style="@style/movie_details_text"
                        android:text="Date"
                        app:layout_constraintEnd_toEndOf="@+id/movie_date"
                        app:layout_constraintStart_toStartOf="@+id/movie_date"
                        app:layout_constraintTop_toBottomOf="@+id/movie_date" />


                    <TextView
                        android:id="@+id/movie_budgett"
                        style="@style/MovieDetailsTextStyle"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="2dp"
                        android:text="Budget"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/movie_release_text_view" />

                    <TextView
                        android:id="@+id/movie_budget_text"
                        style="@style/MovieDetailsTextStyle.Italic"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintTop_toTopOf="@id/movie_budgett" />

                    <TextView
                        android:id="@+id/movie_votedd"
                        style="@style/MovieDetailsTextStyle"
                        android:layout_marginTop="8dp"
                        android:text="Voted"
                        app:layout_constraintEnd_toEndOf="@id/movie_budgett"
                        app:layout_constraintStart_toStartOf="@id/movie_budgett"
                        app:layout_constraintTop_toBottomOf="@id/movie_budget_text" />

                    <TextView
                        android:id="@+id/movie_voted_text"
                        style="@style/MovieDetailsTextStyle.Italic"
                        app:layout_constraintEnd_toEndOf="@id/movie_budget_text"
                        app:layout_constraintStart_toStartOf="@id/movie_budget_text"
                        app:layout_constraintTop_toTopOf="@id/movie_votedd" />


                    <TextView
                        android:id="@+id/movieVoteAverage"
                        style="@style/MovieDetailsTextStyle"
                        android:layout_marginTop="8dp"
                        android:text="Rating"
                        app:layout_constraintEnd_toEndOf="@id/movie_budgett"
                        app:layout_constraintStart_toStartOf="@id/movie_budgett"
                        app:layout_constraintTop_toBottomOf="@id/movie_votedd" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/voteAverage"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="10"
                        android:numStars="10"
                        android:progressBackgroundTint="@color/green"
                        android:progressTint="@color/gold"
                        app:layout_constraintBottom_toBottomOf="@id/movieVoteAverage"
                        app:layout_constraintEnd_toEndOf="@id/movie_budget_text"
                        app:layout_constraintStart_toStartOf="@id/movie_budget_text"
                        app:layout_constraintTop_toTopOf="@id/movieVoteAverage">

                    </androidx.appcompat.widget.AppCompatRatingBar>

                    <TextView
                        android:id="@+id/movieOriginalLanguage"
                        style="@style/MovieDetailsTextStyle"
                        android:layout_marginTop="8dp"
                        android:text="Original Language"
                        app:layout_constraintEnd_toEndOf="@id/movie_budgett"
                        app:layout_constraintStart_toStartOf="@id/movie_budgett"
                        app:layout_constraintTop_toBottomOf="@id/movieVoteAverage" />

                    <TextView
                        android:id="@+id/originalLanguage"
                        style="@style/MovieDetailsTextStyle.Italic"
                        app:layout_constraintEnd_toEndOf="@id/movie_budget_text"
                        app:layout_constraintStart_toStartOf="@id/movie_budget_text"
                        app:layout_constraintTop_toTopOf="@id/movieOriginalLanguage" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/titleConstraint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/movieOriginalLanguage">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        android:id="@+id/movieStatus"
                        style="@style/MovieDetailsTextStyle"
                        android:layout_marginTop="8dp"
                        android:text="Status"
                        app:layout_constraintEnd_toEndOf="@id/movie_budgett"
                        app:layout_constraintStart_toStartOf="@id/movie_budgett"
                        app:layout_constraintTop_toBottomOf="@id/originalLanguage" />

                    <TextView
                        android:id="@+id/status"
                        style="@style/MovieDetailsTextStyle.Italic"
                        app:layout_constraintEnd_toEndOf="@id/movie_budget_text"
                        app:layout_constraintStart_toStartOf="@id/movie_budget_text"
                        app:layout_constraintTop_toTopOf="@id/movieStatus" />

                    <View
                        android:id="@+id/view_type"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/divider"
                        android:backgroundTint="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/movieStatus" />

                    <TextView
                        android:id="@+id/movieOverview"
                        style="@style/MovieDetailsTextStyle"
                        android:layout_marginTop="6dp"
                        android:text="Overview"
                        app:layout_constraintEnd_toEndOf="@id/movie_budgett"
                        app:layout_constraintStart_toStartOf="@id/movie_budgett"
                        app:layout_constraintTop_toBottomOf="@id/view_type" />

                    <TextView
                        android:id="@+id/overview"
                        style="@style/MovieDetailsTextStyle.Italic"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        app:layout_constraintEnd_toEndOf="@id/movie_budget_text"
                        app:layout_constraintStart_toStartOf="@id/movie_budgett"
                        app:layout_constraintTop_toBottomOf="@id/movieOverview" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rvs_constraint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewConstraint">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/actorsText"
                        style="@style/MovieDetailsTextStyle"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        android:text="Cast"
                        app:layout_constraintEnd_toStartOf="@id/guideline3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/actorsText" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/actorsRv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view"
                        app:spanCount="3" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cast_size_text" />

                    <TextView
                        android:id="@+id/cast_size_text"
                        style="@style/MovieDetailsTextStyle"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:text="Show more"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/actorsRv" />


                    <TextView
                        android:id="@+id/similarMoviesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:fontFamily="@font/gilroy_bold"
                        android:text="Similar films"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintStart_toStartOf="@id/actorsText"
                        app:layout_constraintTop_toBottomOf="@id/cast_size_text" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/similarMoviesRv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/similarMoviesText" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/similarMoviesRv" />


                    <TextView
                        android:id="@+id/recommendMoviesText"
                        style="@style/MovieDetailsTextStyle"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/gilroy_bold"
                        android:text="Recommend films"
                        android:textSize="22sp"
                        app:layout_constraintEnd_toEndOf="@id/actorsText"
                        app:layout_constraintStart_toStartOf="@id/actorsText"
                        app:layout_constraintTop_toBottomOf="@id/view4" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recommendMoviesRv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recommendMoviesText" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/recommendMoviesRv" />


                    <TextView
                        android:id="@+id/margintext"
                        style="@style/MovieDetailsTextStyle"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:text=""
                        android:textSize="22sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@id/view5"
                        app:layout_constraintStart_toStartOf="@id/view5"
                        app:layout_constraintTop_toBottomOf="@id/view5" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.motion.widget.MotionLayout>
